{
  "name": "react-light-accordion",
  "version": "0.1.4",
  "description": "Lightweight react accordion component",
  "main": "build/index.js",
  "keywords": [
    "react",
    "react-component",
    "accordion",
    "collapse"
  ],
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "node scripts/start.js",
    "start": "npm-run-all -p watch-css start-js",
    "build": "node scripts/build.js",
    "demo": "node scripts/demo.js",
    "test": "node scripts/test.js --env=jsdom",
    "precommit": "pretty-quick --staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ppatel/react-light-accordion"
  },
  "author": "Farbod Salimi <info@farbod-salimi.com>",
  "bugs": {
    "url": "https://github.com/ppatel/react-light-accordion/issues"
  },
  "homepage": "https://github.com/ppatel/react-light-accordion#readme",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.3.1"
  },
  "devDependencies": {
    "autoprefixer": "10.2.5",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "babel-runtime": "6.26.0",
    "bootstrap": "^4.6.0",
    "case-sensitive-paths-webpack-plugin": "2.4.0",
    "chalk": "4.1.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "5.2.0",
    "dotenv": "8.2.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "7.23.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "6.2.0",
    "fs-extra": "9.1.0",
    "html-webpack-plugin": "5.3.1",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "5.2.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "promise": "8.1.0",
    "raf": "3.4.1",
    "react": "^17.0.2",
    "react-dev-utils": "^11.0.4",
    "react-dom": "^17.0.2",
    "style-loader": "2.0.0",
    "sw-precache-webpack-plugin": "1.0.0",
    "url-loader": "4.1.1",
    "webpack": "5.31.0",
    "webpack-dev-server": "3.11.2",
    "webpack-manifest-plugin": "3.1.1",
    "whatwg-fetch": "3.6.2"
  },
  "peerDependencies": {
    "react": ">=17.0",
    "react-dom": ">=17.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
